    link(rel="stylesheet", href="//at.alicdn.com/t/font_1628469_ujp8jeb8zyr.css")
block body
    .app
        include ./component/header.pug
        .main
            .left
                .wrap
                    .logo-wrap
                        a.logo(href='/') Mini Book
                    .search-wrap
                        include ./component/search.pug
